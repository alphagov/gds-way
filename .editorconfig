# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.java]
indent_style: space
indent_size: 4
end_of_line: lf
charset: utf-8
insert_final_newline: true
continuation_indent_size: 8

[*.{scss,js,erb,json}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true